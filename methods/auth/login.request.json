{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для авторизации пользователя",
    "properties": {
        "login": {
            "description": "Логин, телефон либо email",
            "minLength": 1, 
            "type": "string"
        }, 
        "password": {
            "description": "Пароль",
            "minLength": 5, 
            "type": "string"
        }
    }, 
    "required": [
        "login", 
        "password"
    ], 
    "type": "object"
}