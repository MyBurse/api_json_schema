{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "required": [
        "error", 
        "server_time", 
        "run_time"
    ], 
    "type": "object", 
    "description": "Response to method products.directBuy", 
    "properties": {
        "error": {
            "type": "number", 
            "description": "Error code"
        }, 
        "server_time": {
            "type": "number", 
            "description": "Server time (unix)"
        }, 
        "run_time": {
            "type": "number", 
            "description": "Run time"
        }, 
        "error_text": {
            "type": "string", 
            "description": "Error text"
        }, 
        "error_url": {
            "type": "string", 
            "description": "Link to error page"
        }
    }
}