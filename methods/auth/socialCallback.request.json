{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для авторизации через соцсети",
    "properties": {
        "social_id": {
            "description": "Идентификатор пользователя в социальной сети",
            "type": "string"
        },
        "social_type": {
            "description": "Тип социальной сети",
            "type": "string",
            "enum": [
                "vkontakte",
                "odnoklassniki",
                "facebook"
            ]
        },
        "first_name": {
            "description": "Имя",
            "type": "string"
        },
        "last_name": {
            "description": "Фамилия",
            "type": "string"
        },
        "email": {
            "description": "Email",
            "type": "string"
        },
        "birthday": {
            "description": "Дата рождения в формате Y-m-d",
            "type": "string"
        },
        "avatar_url": {
            "description": "Ссылка на аватар",
            "type": "string"
        }
    }, 
    "required": [
        "social_id",
        "social_type"
    ], 
    "type": "object"
}