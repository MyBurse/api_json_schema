{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "метод для получения статей одного блога",
    "properties": {
        "id": {
            "description": "Идентификатор блога",
            "minNum": 1, 
            "type": "integer"
        }, 
        "last_id": {
            "description": "Идентификатор последнего загруженого поста",
            "type": "string"
        }, 
        "limit": {
            "default": 20, 
            "description": "Лимит",
            "minNum": 1, 
            "type": "integer"
        }
    }, 
    "required": [
        "id"
    ], 
    "type": "object"
}