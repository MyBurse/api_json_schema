{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метод для получения данных о товаре",
    "properties": {
        "product_type": {
            "description": "Тип товара",
            "type": ["string", "integer"]
        },
        "last_id": {
            "description": "Последний идентификатор",
            "type": "string"
        },
        "limit": {
            "default": 20,
            "description": "Лимит",
            "minNum": 1,
            "type": "integer"
        }
    },
    "required": [
        "product_type"
    ],
    "type": "object"
}