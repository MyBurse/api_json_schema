{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для получения списка диалогов",
    "properties": {
        "limit": {
            "default": 20,
            "description":"Лимит",
            "type": "integer"
        }, 
        "offset": {
            "description":"Отступ",
            "default": 0, 
            "type": "integer"
        }, 
        "shop_id": {
            "description":"Идентификатор магазина, если диалог в моём магазине",
            "type": "integer"
        }
    }, 
    "required": [
        "owner_type"
    ], 
    "type": "object"
}