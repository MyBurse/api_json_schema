{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для отправки СМС для восстановления пароля",
    "properties": {
        "data": {
            "description": "Телефон или email",
            "type": "string"
        }, 
        "user_id": {
            "description": "Идентификатор выбранного пользователя",
            "type": "integer"
        }
    }, 
    "required": [
        "data",
        "user_id"
    ],
    "type": "object"
}