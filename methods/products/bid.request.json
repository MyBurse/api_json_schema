{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метод для оставления заявки",
    "method": "post",
    "properties": {
        "id": {
            "description": "Идентификатор товара",
            "minNum": 1,
            "type": "integer"
        },
        "amount": {
            "type": "number",
            "description": "Сумма заявки"
        },
        "comment": {
            "type": "string",
            "description": "Комментарий для тендера"
        }
    },
    "required": [
        "id"
    ],
    "type": "object"
}