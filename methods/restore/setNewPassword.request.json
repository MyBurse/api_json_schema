{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для установки нового пароля после восстановления",
    "properties": {
        "password": {
            "description": "Пароль",
            "type": "string"
        }, 
        "password_confirm": {
            "description": "Подтверждение пароля",
            "type": "string"
        }, 
        "token": {
            "description": "Токен",
            "type": "string"
        }, 
        "user_id": {
            "description": "Идентификатор пользователя",
            "type": "string"
        }
    }, 
    "required": [
        "password", 
        "password_confirm", 
        "user_id", 
        "token"
    ], 
    "type": "object"
}