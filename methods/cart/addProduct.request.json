{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Метод для добавления товаров в корзину",
    "properties": {
        "count": {
            "default": 1, 
            "description": "Количество",
            "type": "integer"
        }, 
        "id": {
            "description": "Идентификатор товара",
            "minNum": 1, 
            "type": "integer"
        }
    }, 
    "required": [
        "id"
    ], 
    "type": "object"
}