{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Method to request restore password and send restore sms",
    "properties": {
        "password": {
            "description": "Password",
            "type": "string"
        },
        "password_confirm": {
            "description": "Password confirm",
            "type": "string"
        },
        "token": {
            "description": "Token",
            "type": "string"
        },
        "user_id": {
            "description": "User ID",
            "type": "string"
        }
    }, 
    "required": [
        "password",
        "password_confirm",
        "user_id",
        "token"
    ],
    "type": "object"
}